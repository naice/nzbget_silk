<?xml version="1.0" encoding="UTF-8"?>
<ContentView 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="nzbget_silk.Controls.SectionDividerVertical">

    <ContentView.Padding>
        <OnPlatform x:TypeArguments="Thickness" iOS="0" Android="0" WinPhone="0"/>
    </ContentView.Padding>
    <ContentView.Content>
        <BoxView 
            VerticalOptions="FillAndExpand" 
            BackgroundColor="{DynamicResource Divider}">
            <BoxView.WidthRequest>
                <OnPlatform x:TypeArguments="x:Double" iOS=".5" Android="1" WinPhone="1"/>
            </BoxView.WidthRequest>
        </BoxView>
    </ContentView.Content>
</ContentView>